<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.alien.FXMLController">
   <center>
      <GridPane prefHeight="369.0" prefWidth="466.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Label" />
            <TextField fx:id="TxtParole" promptText="Insert text..." GridPane.columnIndex="1" />
            <Button fx:id="buttonTranslate" mnemonicParsing="false" onAction="#doTranslate" text="Translate" GridPane.columnIndex="2" />
            <TextArea fx:id="txtRisultato" minHeight="-Infinity" minWidth="-Infinity" prefHeight="123.0" prefWidth="465.0" promptText="Welcom to Alien dictionary v2023" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </center>
   <top>
      <Label prefHeight="32.0" prefWidth="131.0" text="Lab2-Alien translator" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Button fx:id="buttonClear" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#doClear" text="Clear" BorderPane.alignment="CENTER_RIGHT" />
   </bottom>
</BorderPane>
